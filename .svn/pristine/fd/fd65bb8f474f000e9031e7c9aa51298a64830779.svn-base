			},
			formatDate:function(time) { 
				var y = time.getFullYear(); 
				var m = time.getMonth() + 1;  
				m = m < 10 ? '0' + m : m;  
				var d = time.getDate();  
				d = d < 10 ? ('0' + d) : d;  
				return y + '-' + m + '-' + d;  
          },
		},
